<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="nav_help" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#C8C8C8" />
        <Setter Property="FontSize" Value="10" />
        <Setter Property="TextAlignment" Value="Center" />
        <Setter Property="Margin" Value="0 3 0 0" />
    </Style>

    <Style x:Key="preview_title" TargetType="TextBlock">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Margin" Value="0 0 0 15" />
    </Style>

    <Style x:Key="preview_price" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="DemiBold" />
        <Setter Property="Margin" Value="0 0 0 5" />
    </Style>

    <Style x:Key="auth_title" TargetType="Label">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontWeight" Value="DemiBold" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="Margin" Value="0 0 0 15" />
    </Style>

    <Style x:Key="error_msg" TargetType="Label">
        <Setter Property="Foreground" Value="Red" />
    </Style>

</ResourceDictionary>